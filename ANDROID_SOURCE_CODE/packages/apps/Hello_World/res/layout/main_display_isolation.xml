<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="#888888">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="180dip"
        android:orientation="vertical"
	android:id="@+id/host_container">

	<Button
		android:id="@+id/button_main"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/Button01"
		android:textSize="10pt"/>

	<Button
		android:id="@+id/button_aframe"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/Button02"
		android:textSize="10pt"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:id="@+id/textview">


	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/host_activity"
        android:textStyle="bold"
        android:textSize="12pt"
        android:typeface="sans"
        android:textColor="#36ff00"
        android:textAllCaps="true"
        android:shadowColor="#ffd803"
        android:shadowRadius="15.0"
	android:gravity="center" 
         />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:id="@+id/display_test">
	</LinearLayout>

	</LinearLayout>
	
	
